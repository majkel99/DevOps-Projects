#!/bin/bash

set -e

# Check argument
if [ -z "$1" ]; then
  echo "Usage: log-archive <log-directory>"
  exit 1
fi

LOG_DIR="$1"

# Validate directory
if [[ ! -d "$LOG_DIR" ]]; then
  echo "Error: Directory '$LOG_DIR' does not exist."
  exit 1
fi

# Configuration
ARCHIVE_BASE_DIR="/var/log-archive"
TIMESTAMP=$(date +"%Y%m%d_%H%M%S")
ARCHIVE_NAME="logs_archive_${TIMESTAMP}.tar.gz"
ARCHIVE_PATH="${ARCHIVE_BASE_DIR}/${ARCHIVE_NAME}"
LOG_FILE="${ARCHIVE_BASE_DIR}/archive.log"

# Create archive directory if not exists
mkdir -p "$ARCHIVE_BASE_DIR"

# Create archive
tar -czf "$ARCHIVE_PATH" -C "$LOG_DIR" .

# Log operation
echo "$(date +"%Y-%m-%d %H:%M:%S") - Archived logs from $LOG_DIR to $ARCHIVE_PATH" >> "$LOG_FILE"

echo "Logs archived successfully:"
echo "  $ARCHIVE_PATH"

